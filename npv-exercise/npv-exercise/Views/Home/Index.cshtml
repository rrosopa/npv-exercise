@{
    ViewData["Title"] = "Home Page";
}
<div class="d-flex flex-column flex-lg-row justify-content-around">
    <div class="card p-4 w-100 w-lg-60 m-3">
        <div class="card-title">
            <h2>Calculate Net Present Value</h2>
        </div>
        <div class="card-body">
            <ul id="div-error" class="text-danger mb-3">
            </ul>

            <form id="form-npv">
                <div class="form-group">
                    <label>Initial Value</label>
                    <div class="d-flex align-items-center justify-content-center">
                        <input type="text"
                               id="input-initial-value"
                               name="initialValue"
                               class="form-control"
                               required />
                        <span class="pl-2">%</span>
                    </div>
                </div>
                <div class="form-group">
                    <label>Lower bound discount rate</label>
                    <div class="d-flex align-items-center justify-content-center">
                        <input type="text"
                               id="input-lower-bound-rate"
                               name="lowerBoundRate"
                               class="form-control"
                               required />
                        <span class="pl-2">%</span>
                    </div>
                </div>
                <div class="form-group">
                    <label>Upper bound discount rate</label>
                    <div class="d-flex align-items-center justify-content-center">
                        <input type="text"
                               id="input-upper-bound-rate"
                               name="upperBoundRate"
                               class="form-control"
                               required />
                        <span class="pl-2">%</span>
                    </div>
                </div>
                <div class="form-group">
                    <label>Increment</label>
                    <div class="d-flex align-items-center justify-content-center">
                        <input type="text"
                               id="input-increment"
                               name="increment"
                               class="form-control"
                               required />
                        <span class="pl-2">%</span>
                    </div>
                </div>

                <div class="form-group">
                    <label>Cashflows</label>
                    <div id="div-cashflows">
                        <div class=" mt-2 d-flex align-items-center justify-content-center">
                            <input type="number"
                                   name="cashflows"
                                   class="form-control input-cashflow"
                                   pattern="^-?([0-9]+|[0-9]{1,3}(,[0-9]{3})*)(\.[0-9]{1,2})?$"
                                   required />
                            <button type="button"
                                    class="btn btn-danger ml-2 btn-remove font-weight-bolder">
                                X
                            </button>
                        </div>
                    </div>

                    <div class="w-100 d-flex justify-content-end mt-3">
                        <button type="button"
                                id="btn-add-cashflow"
                                class="btn btn-success font-weight-bolder">
                            + Add more
                        </button>
                    </div>

                    <div class="w-100 d-flex justify-content-center mt-3">
                        <button type="submit"
                                id="btn-calculate"
                                class="btn btn-primary">
                            Calculate
                        </button>
                    </div>
                </div>
            </form>

            <div id="div-result" class="mt-3">

            </div>


        </div>
    </div>

    <div class="card p-4 w-100 w-lg-40 m-3">
        <div class="card-title">
            <h2>Previous calculations</h2>
        </div>
        <div id="div-previous" class="card-body overflow-auto" style="max-height: 80vh">

        </div>
    </div>
</div>
